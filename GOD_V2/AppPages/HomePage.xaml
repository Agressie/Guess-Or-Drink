<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GOD_V2.AppPages.HomePage"
             Title=" ">
    <StackLayout
            Padding="30,0"
            Spacing="25">

        <Label
                Text="Welcome to Guess Or Drink!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
        <Label
                Text="Hieronder kun je kiezen uit 2 keuzes, het inzien van jou account details of het starten van een nieuwe game. Druk op 1 van de volgende knoppen om een keuze te maken." />
        <Button
            x:Name="btnseeaccount"
            Text="See Account Details"
            Clicked="OnSeeAccountClicked"
            HeightRequest="200"
            WidthRequest="300"
            BackgroundColor="DarkRed"
            TextColor="White"
            FontSize="20"
            HorizontalOptions="Center"/>

        <Button
            x:Name="btncreategame"
            Text="Create a new game"
            HeightRequest="200"
            WidthRequest="300"
            Clicked="OnCreategameClicked"
            BackgroundColor="DarkRed"
            TextColor="White"
            FontSize="20"
            HorizontalOptions="Center"/>
    </StackLayout>

</ContentPage>
