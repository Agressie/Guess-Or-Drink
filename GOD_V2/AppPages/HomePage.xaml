<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GOD_V2.AppPages.HomePage"
             Title=" ">
    <StackLayout
            Padding="30,0"
            Spacing="25">

        <Label
                Text="Welcome in the Guess Or Drink App"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
        <Label
            Text="Downbelow you can choose 2 options, one is to see your account details and the other is to create a new game."
            SemanticProperties.HeadingLevel="Level1" />
        <Button 
            x:Name="btnseeacount"
            Text="See Account"
            WidthRequest="150"
            BackgroundColor="Black"
            TextColor="White"
            Clicked="OnAccountClicked"/>
        <Button 
            x:Name="btncreategame"
            Text="Create Game"
            WidthRequest="150"
            BackgroundColor="Green"
            Clicked="OnCreateGameClicked"/>
    </StackLayout>

</ContentPage>
